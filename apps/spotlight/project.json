{
  "name": "spotlight",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/spotlight",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/spotlight"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/spotlight"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "spotlight:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "spotlight:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "spotlight:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "spotlight:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/spotlight/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "dependsOn": ["stylelint"],
      "outputs": ["{options.outputFile}"]
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/spotlight/**/*.css", "apps/spotlight/**/*.scss"]
      }
    }
  },
  "tags": []
}
